{
  "name": "osrs-tracker-web",
  "version": "0.0.0",
  "private": true,
  "description": "Keep track of everything that matters in Old School RuneScape. Track the latest news, item prices, hiscores, and XP gains.",
  "keywords": [
    "oldschool",
    "runescape",
    "osrs",
    "hiscores",
    "items",
    "price",
    "xp",
    "tracker"
  ],
  "repository": {
    "type": "git",
    "url": "github:osrs-tracker/osrs-tracker-web"
  },
  "license": "Apache-2.0",
  "author": {
    "name": "Freek Mencke",
    "email": "freek_mencke.dev@outlook.com",
    "url": "https://freekmencke.com"
  },
  "type": "module",
  "scripts": {
    "postinstall": "npm install --prefix ./scripts",
    "prebuild": "npm run sitemap",
    "build": "NG_BUILD_OPTIMIZE_CHUNKS=1 ng build --configuration production",
    "predocker:build": "npm run sitemap",
    "docker:build": "docker build -t freekmencke/osrs-tracker-web:latest .",
    "docker:push": "docker push freekmencke/osrs-tracker-web:latest",
    "sitemap": "npm run sitemap:items && npm run sitemap:site && npm run sitemap:index",
    "sitemap:index": "node ./scripts/sitemap/sitemap-index.js",
    "sitemap:site": "node ./scripts/sitemap/sitemap-site.js",
    "sitemap:items": "node ./scripts/sitemap/sitemap-items.js",
    "lint": "ng lint",
    "prettier": "prettier --write .",
    "prettier:ci": "prettier --check .",
    "start": "ng serve --open",
    "test": "ng test",
    "watch": "ng build --watch --configuration development"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "prettier": "./.prettierrc.json",
  "dependencies": {
    "@angular/cdk": "^20.2.4",
    "@angular/common": "^20.3.1",
    "@angular/compiler": "^20.3.1",
    "@angular/core": "^20.3.1",
    "@angular/forms": "^20.3.1",
    "@angular/platform-browser": "^20.3.1",
    "@angular/platform-browser-dynamic": "^20.3.1",
    "@angular/platform-server": "^20.3.1",
    "@angular/router": "^20.3.1",
    "@angular/service-worker": "^20.3.1",
    "@angular/ssr": "^20.3.2",
    "@osrs-tracker/hiscores": "^0.10.0",
    "chart.js": "^4.4.9",
    "chartjs-adapter-date-fns": "^3.0.0",
    "chartjs-plugin-annotation": "^3.1.0",
    "chartjs-plugin-zoom": "^2.2.0",
    "compression": "^1.8.0",
    "date-fns": "^4.1.0",
    "express": "^4.21.2",
    "express-prom-bundle": "^8.0.0",
    "helmet": "^8.1.0",
    "marked": "^16.3.0",
    "morgan": "^1.10.0",
    "prom-client": "^15.1.3",
    "rxjs": "~7.8.2",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^20.3.2",
    "@angular/cli": "~20.3.2",
    "@angular/compiler-cli": "^20.3.1",
    "@eslint/js": "^9.29.0",
    "@osrs-tracker/models": "^0.6.0",
    "@stylistic/eslint-plugin": "^4.4.1",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/postcss": "^4.1.10",
    "@tailwindcss/typography": "^0.5.16",
    "@types/compression": "^1.8.1",
    "@types/express": "^4.17.23",
    "@types/gtag.js": "^0.0.20",
    "@types/jest": "^29.5.14",
    "@types/morgan": "^1.9.10",
    "@types/node": "^22.15.31",
    "angular-eslint": "^20.3.0",
    "autoprefixer": "^10.4.21",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.5.5",
    "prettier": "^3.5.3",
    "prettier-eslint": "^16.4.2",
    "tailwindcss": "^4.1.10",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.1"
  }
}
