{
  "name": "osrs-tracker-web",
  "version": "0.0.0",
  "private": true,
  "description": "Keep track of everything that matters in Old School Runescape. Track the latest news, item prices, hiscores, and XP gains.",
  "keywords": [
    "oldschool",
    "runescape",
    "osrs",
    "hiscores",
    "items",
    "price",
    "xp",
    "tracker"
  ],
  "repository": {
    "type": "git",
    "url": "github:osrs-tracker/osrs-tracker-web"
  },
  "license": "Apache-2.0",
  "author": {
    "name": "Freek Mencke",
    "email": "freek_mencke.dev@outlook.com",
    "url": "https://github.com/osrs-tracker/osrs-tracker-web"
  },
  "type": "module",
  "scripts": {
    "postinstall": "npm install --prefix ./scripts",
    "prebuild": "npm run sitemap",
    "build": "NG_BUILD_OPTIMIZE_CHUNKS=1 ng build --configuration production",
    "docker:build": "docker build -t freekmencke/osrs-tracker-web:latest .",
    "docker:push": "docker push freekmencke/osrs-tracker-web:latest",
    "deploy": "npm run deploy:app && npm run deploy:assets",
    "sitemap": "npm run sitemap:items && npm run sitemap:site && npm run sitemap:index",
    "sitemap:index": "node ./scripts/sitemap/sitemap-index.js",
    "sitemap:site": "node ./scripts/sitemap/sitemap-site.js",
    "sitemap:items": "node ./scripts/sitemap/sitemap-items.js",
    "lint": "ng lint",
    "prettier": "prettier --write .",
    "prettier:ci": "prettier --check .",
    "start": "ng serve --open",
    "serve:ssr": "PORT=4200 node dist/osrs-tracker-web/server/server.mjs",
    "test": "ng test",
    "watch": "ng build --watch --configuration development"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "prettier": "./.prettierrc.json",
  "dependencies": {
    "@angular/cdk": "^19.2.9",
    "@angular/common": "^19.2.6",
    "@angular/compiler": "^19.2.6",
    "@angular/core": "^19.2.6",
    "@angular/forms": "^19.2.6",
    "@angular/platform-browser": "^19.2.6",
    "@angular/platform-browser-dynamic": "^19.2.6",
    "@angular/platform-server": "^19.2.6",
    "@angular/router": "^19.2.6",
    "@angular/service-worker": "^19.2.6",
    "@angular/ssr": "^19.2.7",
    "@osrs-tracker/hiscores": "^0.7.1",
    "chart.js": "^4.4.6",
    "chartjs-adapter-date-fns": "^3.0.0",
    "chartjs-plugin-annotation": "^3.1.0",
    "chartjs-plugin-zoom": "^2.2.0",
    "compression": "^1.8.0",
    "date-fns": "^4.1.0",
    "express": "^4.18.2",
    "express-prom-bundle": "^8.0.0",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.1.0",
    "marked": "^15.0.3",
    "morgan": "^1.10.0",
    "prom-client": "^15.1.3",
    "rxjs": "~7.8.1",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.7",
    "@angular/cli": "~19.2.7",
    "@angular/compiler-cli": "^19.2.6",
    "@eslint/js": "^9.17.0",
    "@osrs-tracker/models": "^0.5.2",
    "@stylistic/eslint-plugin": "^2.12.1",
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/typography": "^0.5.15",
    "@types/compression": "^1.7.5",
    "@types/express": "^4.17.17",
    "@types/gtag.js": "^0.0.20",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.14.1",
    "@types/morgan": "^1.9.9",
    "angular-eslint": "^19.3.0",
    "autoprefixer": "^10.4.20",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.49",
    "prettier": "^3.4.2",
    "prettier-eslint": "^16.3.0",
    "tailwindcss": "^3.4.16",
    "typescript": "^5.6.3",
    "typescript-eslint": "8.18.0"
  }
}
